{
  "webui_port": {
    "description": "WebUI服务端口号",
    "type": "int",
    "default": 5000,
    "hint": "请输入WebUI服务的端口号，默认5000",
    "editable": true,
    "display_name": "WebUI端口"
  },
  "backup_enabled": {
    "description": "是否启用自动备份",
    "type": "bool",
    "default": true,
    "hint": "启用后会自动定期备份数据库",
    "editable": true,
    "display_name": "启用自动备份"
  },
  "backup_interval": {
    "description": "自动备份间隔（小时）",
    "type": "int",
    "default": 24,
    "hint": "设置自动备份的时间间隔，单位为小时",
    "editable": true,
    "display_name": "备份间隔"
  },
  "backup_hourly": {
    "description": "保留最近几小时的备份",
    "type": "int",
    "default": 24,
    "hint": "保留最近多少小时的每小时备份",
    "editable": true,
    "display_name": "小时备份保留数"
  },
  "backup_daily": {
    "description": "保留最近几天的备份",
    "type": "int",
    "default": 7,
    "hint": "保留最近多少天的每天备份",
    "editable": true,
    "display_name": "天备份保留数"
  },
  "backup_weekly": {
    "description": "保留最近几周的备份",
    "type": "int",
    "default": 4,
    "hint": "保留最近多少周的每周备份",
    "editable": true,
    "display_name": "周备份保留数"
  },
  "backup_monthly": {
    "description": "保留最近几个月的备份",
    "type": "int",
    "default": 12,
    "hint": "保留最近多少个月的每月备份",
    "editable": true,
    "display_name": "月备份保留数"
  }
}